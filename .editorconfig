# EditorConfig for TrakSense Frontend
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2
